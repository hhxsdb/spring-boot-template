<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.class_test.mapper.StudentMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.class_test.entity.Student">
        <id column="id" property="id" />
        <result column="student_name" property="studentName" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, student_name
    </sql>

    <!-- 获取学生课程信息 -->
    <select id="getStudentCourses" resultType="java.util.Map">
        SELECT
            s.student_name,
            c.class_name,
            GROUP_CONCAT(DISTINCT co.course_name) as course_names
        FROM
            student s
            LEFT JOIN class c ON s.class_id = c.id
            LEFT JOIN student_course sc ON s.id = sc.student_id
            LEFT JOIN course co ON sc.course_id = co.id
        GROUP BY
            s.id, s.student_name, c.class_name
    </select>
</mapper>
